<script>

    function signIn() {

        const email = document.getElementById("email").value
        const psw = document.getElementById("mdp").value
        const data = {email : email, password : psw}

        axios.post("http://localhost:3000/api/signin", data).then(function (response) {
            document.getElementById("resultatConnectUser").innerHTML = JSON.stringify(response.data)
        })
        
    }

</script>