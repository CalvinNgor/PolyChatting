<script>
    function sendMessage() {
        const content = document.getElementById("content").value
        const ownerID = document.getElementById("ownerID").value
        const data = {content: content, ownerID: ownerID}

        axios.post("http://localhost:3000/api/chatting", data).then(function (response) {
            document.getElementById("resultSendMessage").innerHTML = JSON.stringify(response.data)
        })
    }

</script>