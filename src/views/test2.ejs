<script>
    var userSession = null

    function signUp(){

        const pseudo = document.getElementById("pseudo").value
        const email = document.getElementById("email").value
        const psw = document.getElementById("psw").value

        const data = {pseudo : pseudo, email : email, psw : psw}

        axios.post("http://localhost:3000/api/signup", data).then(function (response) {

            let body = response.data
            let success = body.success

            if (success == false) {
                document.getElementById("resultatCreateUser").innerHTML = "Something went wront please try later."
            }

            let newUID = body.uid
            document.getElementById("resultatCreateUser").innerHTML = ("New user created with id : " + newUID)


        })

    }

    function goLobby(){
        document.location.replace("http://localhost:3000")
    }




</script>